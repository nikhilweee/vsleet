{
  "name": "vsleet",
  "displayName": "vsleet",
  "description": "Submit LeetCode problems from within VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsleet.load",
        "title": "VSLeet: Load Problem"
      },
      {
        "command": "vsleet.login",
        "title": "VSLeet: Paste Cookie"
      },
      {
        "command": "vsleet.local",
        "title": "VSLeet: Local Solution",
        "icon": {
          "light": "media/leetcode-light.svg",
          "dark": "media/leetcode-dark.svg"
        }
      },
      {
        "command": "vsleet.run",
        "title": "VSLeet: Run Solution",
        "icon": {
          "light": "media/leetcode-light.svg",
          "dark": "media/leetcode-dark.svg"
        }
      },
      {
        "command": "vsleet.submit",
        "title": "VSLeet: Submit Solution",
        "icon": {
          "light": "media/leetcode-light.svg",
          "dark": "media/leetcode-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "vsleet.local",
          "group": "2_leetcode",
          "when": "editorFocus"
        },
        {
          "command": "vsleet.run",
          "group": "2_leetcode",
          "when": "editorFocus"
        },
        {
          "command": "vsleet.submit",
          "group": "2_leetcode",
          "when": "editorFocus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vsleet.local",
        "key": "shift+enter",
        "mac": "shift+enter",
        "when": "editorFocus"
      },
      {
        "command": "vsleet.run",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorFocus"
      },
      {
        "command": "vsleet.submit",
        "key": "ctrl+shift+enter",
        "mac": "cmd+shift+enter",
        "when": "editorFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  }
}
